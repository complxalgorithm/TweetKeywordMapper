#!/bin/sh
# Name: tkm (tweetkeywordmapper)
# Author: Stephen C. Sanders <https://stephensanders.me>
# Description: 

# display help information for program
helpFunc()
{
    echo ""
    echo "Usage: ./tkm <parameter>"
    echo "Parameter Options: mapper, counts, help\n"
    echo "search:\tsearch.py - search Twitter for Tweets containing a specific keyword, then map results"
    echo "read:\tread.py - import Tweet data from a CSV file, then map results"
    echo "counts:\tcounts.py - tally the total for each unique value of a specified field from a CSV file"
    echo "help:\tdisplays help information for this script"
    echo ""
    echo "- search and read will run mapper.py to map the results after state counts are determine.\n"
    exit 1
}

# handle parameter

# lack of parameter means the main program file should be ran
if [ $# -eq "0" ]; then
    exec python3 tweetkeywordmapper
    
    # run this if parameter is present
    else
        # display error and show help info if more than one parameter is specified
        if [ $# -gt "1" ]; then
            echo "ERROR - Too many parameters. Only 1 is allowed at most."
            helpFunc
            
            # run this if one parameter is present
            else
                # run search.py program when parameter is set to "search"
                if [ $1 = "search" ]; then
                    exec python3 tweetkeywordmapper -s
                    
                    # 
                    elif [ $1 = "read" ]; then
                        exec python3 tweetkeywordmapper -r
                    
                    # run counts.py program when parameter is set to "counts"
                    elif [ $1 = "counts" ]; then
                        exec python3 -m tweetkeywordmapper -c
                    
                    # display help info when parameter is set to "help"
                    elif [ $1 = "help" ]; then
                        helpFunc
                    
                    # display error and help info if the parameter is set to anything else
                    else
                        echo "ERROR - $1 is not a valid parameter value."
                        helpFunc
                fi
        fi
fi